
{
  "manifest_version": 3,
  "name": "CourseGrabber",
  "version": "1.1",  // Updated version for the new feature
  "description": "Helps students grab courses",
  "action": {
    "default_popup": "CourseGrabber.html", // This will point to your HTML file
    "default_icon": "CourseGrabber.png"    // You can keep your icon the same
  },
  "permissions": ["storage", "notifications"],  // Added notifications permission for alerts
  "background": {
    "service_worker": "background.js"  // If you want a background script for background processes
  },
  "content_scripts": [
    {
      "matches": [
        "https://courses.wustl.edu/*",
        "https://acadinfo.wustl.edu/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ]
}
