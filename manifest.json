{
  "manifest_version": 3,
  "name": "CourseGrabber",
  "version": "1.0",
  "description": "Helps students grab courses",
  "action": {
    "default_popup": "CourseGrabber.html",
    "default_icon": "CourseGrabber.png"
  },
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "https://acadinfo.wustl.edu/*",
    "https://acadinfo.wustl.edu/apps/Registration/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
       "https://courses.wustl.edu/*",
        "https://acadinfo.wustl.edu/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ]
}
